#!/usr/bin/make -f

ifneq (,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
NJOBS := -j $(patsubst parallel=%,%,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
else
NJOBS := -j $(shell nproc)
endif

VERSION := $(shell dpkg-parsechangelog -SVersion -l debian/changelog)

srctree ?= .

build: config 
	$(MAKE) KDEB_PKGVERSION=$(VERSION) $(NJOBS) KERNELRELEASE=5.10.110-radxa-rk3588 ARCH=arm64 -f $(srctree)/Makefile

binary-arch:
	$(MAKE) KDEB_PKGVERSION=$(VERSION) $(NJOBS) KERNELRELEASE=5.10.110-radxa-rk3588 ARCH=arm64 -f $(srctree)/Makefile intdeb-pkg

config:
	$(MAKE) ARCH=arm64 rockchip_linux_defconfig
	./scripts/config --disable CONFIG_DEBUG_INFO

clean:
	rm -rf debian/*tmp debian/files
	$(MAKE) clean

binary: binary-arch