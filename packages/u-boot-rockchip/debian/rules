#!/usr/bin/make -f

include /usr/share/dpkg/architecture.mk
include /usr/share/dpkg/pkg-info.mk

ifneq ($(DEB_BUILD_GNU_TYPE),$(DEB_HOST_GNU_TYPE))
CROSS_COMPILE ?= $(DEB_HOST_GNU_TYPE)-
endif

ifneq (,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
NJOBS := -j $(patsubst parallel=%,%,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
else
NJOBS := -j $(shell nproc)
endif

DDR_BLOB := rk3588_ddr_lp4_2112MHz_lp5_2736MHz_v1.11.bin
BL31_BLOB := rk3588_bl31_v1.38.elf
BL32_BLOB := rk3588_bl32_v1.13.bin

BOARDS := orangepi_5 orangepi_5_sata orangepi_5b orangepi_5_plus indiedroid_nova nanopi_r6s nanopi_r6c nanopc_t6 rock-5b-rk3588 rock-5a-rk3588s rock-5a-spi-rk3588s 
BOARDS2 := $(addprefix pkg_,$(filter-out orangepi_5_sata rock-5a-spi-rk3588s,$(BOARDS)))  

$(BOARDS): 
	@mkdir -p debian/build/$@

	make O=debian/build/$@ \
	  CROSS_COMPILE=$(CROSS_COMPILE) \
	  ARCH=arm \
	  $(NJOBS) \
	  $@_defconfig

	@touch .scmversion
	@sed -i 's/CONFIG_LOCALVERSION=""/CONFIG_LOCALVERSION="-rockchip"/g' debian/build/$@/.config

	@mkdir -p debian/build/$@/arch/arm/mach-rockchip
	@cp arch/arm/mach-rockchip/decode_bl31.py debian/build/$@/arch/arm/mach-rockchip/decode_bl31.py

	@cp debian/rkbin/$(BL32_BLOB) debian/build/$@/tee.bin
	@cp debian/rkbin/$(BL31_BLOB) debian/build/$@/bl31.elf

	make O=debian/build/$@ \
	  CROSS_COMPILE=$(CROSS_COMPILE) \
	  SOURCE_DATE_EPOCH=$(shell date +%s) \
	  ARCH=arm \
	  $(NJOBS) \
	  BL31=../../../debian/rkbin/$(BL31_BLOB) \
	  spl/u-boot-spl.bin u-boot.dtb u-boot.itb

	./debian/build/$@/tools/mkimage -n rk3588 -T rksd -d \
	  debian/rkbin/$(DDR_BLOB):debian/build/$@/spl/u-boot-spl.bin \
	  debian/build/$@/idbloader.img

	@dd if=/dev/zero of=debian/build/$@/rkspi_loader.img bs=1M count=0 seek=16
	@parted -s debian/build/$@/rkspi_loader.img mklabel gpt
	@parted -s debian/build/$@/rkspi_loader.img unit s mkpart idbloader 64 7167
	@parted -s debian/build/$@/rkspi_loader.img unit s mkpart vnvm 7168 7679
	@parted -s debian/build/$@/rkspi_loader.img unit s mkpart reserved_space 7680 8063
	@parted -s debian/build/$@/rkspi_loader.img unit s mkpart reserved1 8064 8127
	@parted -s debian/build/$@/rkspi_loader.img unit s mkpart uboot_env 8128 8191
	@parted -s debian/build/$@/rkspi_loader.img unit s mkpart reserved2 8192 16383
	@parted -s debian/build/$@/rkspi_loader.img unit s mkpart uboot 16384 32734
	@dd if=debian/build/$@/idbloader.img of=debian/build/$@/rkspi_loader.img seek=64 conv=notrunc
	@dd if=debian/build/$@/u-boot.itb of=debian/build/$@/rkspi_loader.img seek=16384 conv=notrunc

build: $(BOARDS)

$(BOARDS2):
	@rm -rf debian/tmp && mkdir -m 755 -p debian/tmp/u-boot/usr/lib/u-boot
	@cp debian/build/$(subst pkg_,,$@)/u-boot.itb debian/tmp/u-boot/usr/lib/u-boot/u-boot.itb
	@cp debian/build/$(subst pkg_,,$@)/idbloader.img debian/tmp/u-boot/usr/lib/u-boot/idbloader.img
	@cp debian/build/$(subst pkg_,,$@)/rkspi_loader.img debian/tmp/u-boot/usr/lib/u-boot/rkspi_loader.img
	@if [ "orangepi_5" = "$(subst pkg_,,$@)" ]; then cp debian/build/orangepi_5_sata/rkspi_loader.img debian/tmp/u-boot/usr/lib/u-boot/rkspi_loader_sata.img; \
	elif [ "rock-5a-rk3588s" = "$(subst pkg_,,$@)" ]; then cp debian/build/rock-5a-spi-rk3588s/rkspi_loader.img debian/tmp/u-boot/usr/lib/u-boot/rkspi_loader.img; fi

	@mkdir -m 755 -p "debian/tmp/u-boot/DEBIAN"
	@mkdir -p "debian/tmp/u-boot/usr/share/doc/u-boot"
	@cp debian/copyright "debian/tmp/u-boot/usr/share/doc/u-boot"
	@cp debian/changelog "debian/tmp/u-boot/usr/share/doc/u-boot/changelog.Debian"
	@gzip -9 "debian/tmp/u-boot/usr/share/doc/u-boot/changelog.Debian"
	@sh -c "cd 'debian/tmp/u-boot'; find . -type f ! -path './DEBIAN/*' -printf '%P\0' | xargs -r0 md5sum > DEBIAN/md5sums"
	@chown -R root:root "debian/tmp/u-boot" && chmod -R go-w "debian/tmp/u-boot" && chmod -R a+rX "debian/tmp/u-boot"
	@if [ "indiedroid_nova" = "$(subst pkg_,,$@)" ]; then dpkg-gencontrol -pu-boot-indiedroid-nova -P"debian/tmp/u-boot"; \
	else dpkg-gencontrol -pu-boot-$(subst -rk3588,,$(subst -rk3588s,,$(subst _,-,$(subst pkg_,,$@)))) -P"debian/tmp/u-boot"; fi
	@dpkg --build "debian/tmp/u-boot" ..

binary-arch: $(BOARDS2)

binary: binary-arch

clean:
	@rm -rf debian/*tmp debian/tmp debian/build debian/files
	$(MAKE) clean
