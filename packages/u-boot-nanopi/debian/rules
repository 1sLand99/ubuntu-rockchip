#!/usr/bin/make -f

include /usr/share/dpkg/architecture.mk
include /usr/share/dpkg/pkg-info.mk

ifneq ($(DEB_BUILD_GNU_TYPE),$(DEB_HOST_GNU_TYPE))
CROSS_COMPILE ?= $(DEB_HOST_GNU_TYPE)-
endif

ifneq (,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
NJOBS := -j $(patsubst parallel=%,%,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
else
NJOBS := -j $(shell nproc)
endif

DDR_BLOB := rk3588_ddr_lp4_2112MHz_lp5_2736MHz_v1.09.bin
BL31_BLOB := rk3588_bl31_v1.36.elf
BL32_BLOB := rk3588_bl32_v1.12.bin

nanopi6: 
	@mkdir -p debian/build/$@

	make O=debian/build/$@ \
	  CROSS_COMPILE=$(CROSS_COMPILE) \
	  ARCH=arm \
	  $(NJOBS) \
	  $@_defconfig

	@touch .scmversion	
	@sed -i 's/CONFIG_LOCALVERSION=""/CONFIG_LOCALVERSION="-nanopi-rk3588"/g' debian/build/$@/.config

	@mkdir -p debian/build/$@/arch/arm/mach-rockchip
	@cp arch/arm/mach-rockchip/decode_bl31.py debian/build/$@/arch/arm/mach-rockchip/decode_bl31.py

	@cp debian/rkbin/$(BL32_BLOB) debian/build/$@/tee.bin
	@cp debian/rkbin/$(BL31_BLOB) debian/build/$@/bl31.elf

	make O=debian/build/$@ \
	  CROSS_COMPILE=$(CROSS_COMPILE) \
	  SOURCE_DATE_EPOCH=$(shell date +%s) \
	  ARCH=arm \
	  $(NJOBS) \
	  BL31=../../../debian/rkbin/$(BL31_BLOB) \
	  spl/u-boot-spl.bin u-boot.dtb u-boot.itb

	./debian/build/$@/tools/mkimage -n rk3588 -T rksd -d \
	  debian/rkbin/$(DDR_BLOB):debian/build/$@/spl/u-boot-spl.bin \
	  debian/build/$@/idbloader.img

	chown -R joshua debian

build: nanopi6

binary-nanopi6:
	rm -rf debian/tmp/nanopi6
	mkdir -m 755 -p debian/tmp/nanopi6/usr/lib/u-boot-nanopi-rk3588
	cp debian/build/nanopi6/u-boot.itb debian/tmp/nanopi6/usr/lib/u-boot-nanopi-rk3588/u-boot.itb
	cp debian/build/nanopi6/idbloader.img debian/tmp/nanopi6/usr/lib/u-boot-nanopi-rk3588/idbloader.img

	mkdir -m 755 -p "debian/tmp/nanopi6/DEBIAN"
	mkdir -p "debian/tmp/nanopi6/usr/share/doc/u-boot-nanopi-rk3588"
	cp debian/copyright "debian/tmp/nanopi6/usr/share/doc/u-boot-nanopi-rk3588/"
	cp debian/changelog "debian/tmp/nanopi6/usr/share/doc/u-boot-nanopi-rk3588/changelog.Debian"
	gzip -9 "debian/tmp/nanopi6/usr/share/doc/u-boot-nanopi-rk3588/changelog.Debian"
	sh -c "cd 'debian/tmp/nanopi6'; find . -type f ! -path './DEBIAN/*' -printf '%P\0' | xargs -r0 md5sum > DEBIAN/md5sums"
	chown -R root:root "debian/tmp/nanopi6" && chmod -R go-w "debian/tmp/nanopi6" && chmod -R a+rX "debian/tmp/nanopi6"
	dpkg-gencontrol -pu-boot-nanopir6-rk3588 -P"debian/tmp/nanopi6"
	dpkg --build "debian/tmp/nanopi6" ..

binary-arch: binary-nanopi6

binary: binary-arch

clean:
	@rm -rf debian/*tmp debian/tmp debian/build debian/files
	$(MAKE) clean
