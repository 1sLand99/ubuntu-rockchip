#!/usr/bin/make -f

ifneq (,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
NJOBS := -j $(patsubst parallel=%,%,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
else
NJOBS := -j $(shell nproc)
endif

srctree ?= .

parted_args:=mklabel gpt unit s mkpart idbloader 64 7167 unit s mkpart vnvm 7168 7679 \
			unit s mkpart reserved_space 7680 8063 unit s mkpart reserved1 8064 8127 \
			unit s mkpart uboot_env 8128 8191 unit s mkpart reserved2 8192 16383 \
			unit s mkpart uboot 16384 32734

build-orangepi5: build-orangepi5-sata
	make $(NJOBS) ARCH=arm O=debian/build/orangepi5 orangepi_5_defconfig
	sed -i 's/CONFIG_LOCALVERSION=""/CONFIG_LOCALVERSION="-orangepi-rk3588"/g' debian/build/orangepi5/.config && touch debian/build/orangepi5/.scmversion
	mkdir -p debian/build/orangepi5/arch/arm/mach-rockchip && cp arch/arm/mach-rockchip/decode_bl31.py debian/build/orangepi5/arch/arm/mach-rockchip/decode_bl31.py
	make $(NJOBS) O=debian/build/orangepi5 ARCH=arm BL31=../../../debian/rkbin/rk3588_bl31_v1.27.elf spl/u-boot-spl.bin u-boot.dtb u-boot.itb
	./debian/build/orangepi5/tools/mkimage -n rk3588 -T rksd -d debian/rkbin/rk3588_ddr_lp4_2112MHz_lp5_2736MHz_v1.08.bin:debian/build/orangepi5/spl/u-boot-spl.bin debian/build/orangepi5/idbloader.img

	dd if=/dev/zero of=debian/build/orangepi5/rkspi_loader.img bs=1M count=0 seek=16
	parted -s debian/build/orangepi5/rkspi_loader.img $(parted_args)
	dd if=debian/build/orangepi5/idbloader.img of=debian/build/orangepi5/rkspi_loader.img seek=64 conv=notrunc
	dd if=debian/build/orangepi5/u-boot.itb of=debian/build/orangepi5/rkspi_loader.img seek=16384 conv=notrunc

build-orangepi5-sata:
	make $(NJOBS) ARCH=arm O=debian/build/orangepi5-sata orangepi_5_sata_defconfig
	sed -i 's/CONFIG_LOCALVERSION=""/CONFIG_LOCALVERSION="-orangepi-rk3588"/g' debian/build/orangepi5-sata/.config && touch debian/build/orangepi5-sata/.scmversion
	mkdir -p debian/build/orangepi5-sata/arch/arm/mach-rockchip && cp arch/arm/mach-rockchip/decode_bl31.py debian/build/orangepi5-sata/arch/arm/mach-rockchip/decode_bl31.py
	make $(NJOBS) ARCH=arm O=debian/build/orangepi5-sata BL31=../../../debian/rkbin/rk3588_bl31_v1.27.elf spl/u-boot-spl.bin u-boot.dtb u-boot.itb
	./debian/build/orangepi5-sata/tools/mkimage -n rk3588 -T rksd -d debian/rkbin/rk3588_ddr_lp4_2112MHz_lp5_2736MHz_v1.08.bin:debian/build/orangepi5-sata/spl/u-boot-spl.bin debian/build/orangepi5-sata/idbloader.img

	dd if=/dev/zero of=debian/build/orangepi5-sata/rkspi_loader_sata.img bs=1M count=0 seek=16
	parted -s debian/build/orangepi5-sata/rkspi_loader_sata.img $(parted_args)
	dd if=debian/build/orangepi5-sata/idbloader.img of=debian/build/orangepi5-sata/rkspi_loader_sata.img seek=64 conv=notrunc
	dd if=debian/build/orangepi5-sata/u-boot.itb of=debian/build/orangepi5-sata/rkspi_loader_sata.img seek=16384 conv=notrunc

build-orangepi5b:
	make $(NJOBS) ARCH=arm O=debian/build/orangepi5b orangepi_5b_defconfig
	sed -i 's/CONFIG_LOCALVERSION=""/CONFIG_LOCALVERSION="-orangepi-rk3588"/g' debian/build/orangepi5b/.config && touch debian/build/orangepi5b/.scmversion
	mkdir -p debian/build/orangepi5b/arch/arm/mach-rockchip && cp arch/arm/mach-rockchip/decode_bl31.py debian/build/orangepi5b/arch/arm/mach-rockchip/decode_bl31.py
	make $(NJOBS) ARCH=arm O=debian/build/orangepi5b BL31=../../../debian/rkbin/rk3588_bl31_v1.27.elf spl/u-boot-spl.bin u-boot.dtb u-boot.itb
	./debian/build/orangepi5b/tools/mkimage -n rk3588 -T rksd -d debian/rkbin/rk3588_ddr_lp4_2112MHz_lp5_2736MHz_v1.08.bin:debian/build/orangepi5b/spl/u-boot-spl.bin debian/build/orangepi5b/idbloader.img

	dd if=/dev/zero of=debian/build/orangepi5b/rkspi_loader.img bs=1M count=0 seek=16
	parted -s debian/build/orangepi5b/rkspi_loader.img $(parted_args)
	dd if=debian/build/orangepi5b/idbloader.img of=debian/build/orangepi5b/rkspi_loader.img seek=64 conv=notrunc
	dd if=debian/build/orangepi5b/u-boot.itb of=debian/build/orangepi5b/rkspi_loader.img seek=16384 conv=notrunc

build: build-orangepi5 build-orangepi5b

binary-orangepi5:
	rm -rf debian/tmp/orangepi5
	mkdir -m 755 -p debian/tmp/orangepi5/usr/lib/u-boot-orangepi-rk3588
	cp debian/build/orangepi5/u-boot.itb debian/tmp/orangepi5/usr/lib/u-boot-orangepi-rk3588/u-boot.itb
	cp debian/build/orangepi5/idbloader.img debian/tmp/orangepi5/usr/lib/u-boot-orangepi-rk3588/idbloader.img
	cp debian/build/orangepi5/rkspi_loader.img debian/tmp/orangepi5/usr/lib/u-boot-orangepi-rk3588/rkspi_loader.img
	cp debian/build/orangepi5-sata/rkspi_loader_sata.img debian/tmp/orangepi5/usr/lib/u-boot-orangepi-rk3588/rkspi_loader_sata.img

	mkdir -m 755 -p "debian/tmp/orangepi5/DEBIAN"
	mkdir -p "debian/tmp/orangepi5/usr/share/doc/u-boot-orangepi-rk3588"
	cp debian/copyright "debian/tmp/orangepi5/usr/share/doc/u-boot-orangepi-rk3588/"
	cp debian/changelog "debian/tmp/orangepi5/usr/share/doc/u-boot-orangepi-rk3588/changelog.Debian"
	gzip -9 "debian/tmp/orangepi5/usr/share/doc/u-boot-orangepi-rk3588/changelog.Debian"
	sh -c "cd 'debian/tmp/orangepi5'; find . -type f ! -path './DEBIAN/*' -printf '%P\0' | xargs -r0 md5sum > DEBIAN/md5sums"
	chown -R root:root "debian/tmp/orangepi5" && chmod -R go-w "debian/tmp/orangepi5" && chmod -R a+rX "debian/tmp/orangepi5"
	dpkg-gencontrol -pu-boot-orangepi5-rk3588 -P"debian/tmp/orangepi5"
	dpkg --build "debian/tmp/orangepi5" ..

binary-orangepi5b:
	rm -rf debian/tmp/orangepi5b
	mkdir -m 755 -p debian/tmp/orangepi5b/usr/lib/u-boot-orangepi-rk3588
	cp debian/build/orangepi5b/u-boot.itb debian/tmp/orangepi5b/usr/lib/u-boot-orangepi-rk3588/u-boot.itb
	cp debian/build/orangepi5b/idbloader.img debian/tmp/orangepi5b/usr/lib/u-boot-orangepi-rk3588/idbloader.img
	cp debian/build/orangepi5b/rkspi_loader.img debian/tmp/orangepi5b/usr/lib/u-boot-orangepi-rk3588/rkspi_loader.img

	mkdir -m 755 -p "debian/tmp/orangepi5b/DEBIAN"
	mkdir -p "debian/tmp/orangepi5b/usr/share/doc/u-boot-orangepi-rk3588"
	cp debian/copyright "debian/tmp/orangepi5b/usr/share/doc/u-boot-orangepi-rk3588/"
	cp debian/changelog "debian/tmp/orangepi5b/usr/share/doc/u-boot-orangepi-rk3588/changelog.Debian"
	gzip -9 "debian/tmp/orangepi5b/usr/share/doc/u-boot-orangepi-rk3588/changelog.Debian"
	sh -c "cd 'debian/tmp/orangepi5b'; find . -type f ! -path './DEBIAN/*' -printf '%P\0' | xargs -r0 md5sum > DEBIAN/md5sums"
	chown -R root:root "debian/tmp/orangepi5b" && chmod -R go-w "debian/tmp/orangepi5b" && chmod -R a+rX "debian/tmp/orangepi5b"
	dpkg-gencontrol -pu-boot-orangepi5b-rk3588 -P"debian/tmp/orangepi5b"
	dpkg --build "debian/tmp/orangepi5b" ..

binary-arch: binary-orangepi5 binary-orangepi5b

binary: binary-arch

clean:
	rm -rf debian/*tmp debian/tmp debian/build debian/files
	$(MAKE) clean
